.socials {
  display: flex;
  align-items: center;
}

.socials__item {
  margin-right: 40px;
  @include desktop {
    margin-right: 23px;
  }

  &:last-child {
    margin-right: 0;
  }
}

.socials--round-borders{
  .socials__item {
    margin-right: 24px;
    padding: 15px;
    border: 1px solid $footer-text;
    border-radius: 50%;
    &:hover{
      border-color: $links-hover;
    }
  }
  .socials__icon {
    width: 23px;
    height: 23px;
    fill: $footer-text;
    display: flex;
    align-items: center;
  }
}

.socials__icon {
  width: 29px;
  height: 29px;
  display: block;
  fill: $text-color;
}