.about {
	padding-bottom: 120px;
}

.about__container {
	padding: 164px 24px 0 0;
  display: flex;
  justify-content: center;
}

.about__left {
	width: 15.6%;
	min-width: 281px;
	margin-right: 150px;
}

.about__right {
	width: 29.3%;
	min-width: 528px;
}

.about__prolog {
	opacity: 0.5;
	margin-bottom: 14px;
	font-size: 16px;
	line-height: 30px;
	font-weight: 600;
}
.about__title {
	margin-bottom: 28px;
	font-size: 36px;
	line-height: 48px;
	font-weight: 700;
}
.about__text {
	opacity: 0.5;
	margin-bottom: 92px;
	font-size: 16px;
	line-height: 30px;
	font-weight: 600;
}
.about__ps {
	opacity: 0.5;
	font-size: 16px;
	line-height: 30px;
	font-weight: 400;
	font-style: italic;
}