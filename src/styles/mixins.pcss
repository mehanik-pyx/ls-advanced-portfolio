@mixin desktopHD() {
  @media screen and (max-width: $bp-desktop-hd) {  //до "bp-desktop-hd": "1800px",
    @content;
  }
}

@mixin desktop() {
  @media screen and (max-width: $bp-desktop) {  //до "bp-desktop": "1200px",
    @content;
  }
}

@mixin tablets() {
  @media screen and (max-width: $bp-tablets) {  //до "bp-tablets": "768px",
    @content;
  }
}

@mixin phones() {
  @media screen and (max-width: $bp-phones) {  //до "bp-phones": "480px"
    @content;
  }
}